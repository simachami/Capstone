{% extends "base.jinja" %}

{% block content %}
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-4 mt-5">
      <h3 class="text-center">Sign Up Here</h3>

      <form action="" method="POST" novalidate>
        {{ form.hidden_tag() }}

        <div class="form-group">
          {{ form.first_name.label }}
          {{ form.first_name(class="form-control", size=32) }}
        </div>

        <div class="form-group">
          {{ form.last_name.label }}
          {{ form.last_name(class="form-control", size=32) }}
        </div>

        <div class="form-group">
          {{ form.username.label }}
          {{ form.username(class="form-control", size=32) }}
          {% for error in form.username.errors %}
            <span class="text-danger">{{ error }}</span>
          {% endfor %}
        </div>

        <div class="form-group">
          {{ form.email.label }}
          {{ form.email(class="form-control", size=32) }}
          {% for error in form.email.errors %}
            <span class="text-danger">{{ error }}</span>
          {% endfor %}
        </div>

        <div class="form-group">
          {{ form.password.label }}
          {{ form.password(class="form-control", size=32) }}
          {% for error in form.password.errors %}
            <span class="text-danger">{{ error }}</span>
          {% endfor %}
        </div>

        <div class="form-group">
          {{ form.verify_password.label }}
          {{ form.verify_password(class="form-control", size=32) }}
          {% for error in form.verify_password.errors %}
            <span class="text-danger">{{ error }}</span>
          {% endfor %}
        </div>

        <div class="text-center mt-3">
          {{ form.submit(class="btn btn-primary") }}
        </div>
      </form>
    </div>
  </div>
</div>
{% endblock content %}
